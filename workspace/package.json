{
  "name": "cutlab-workspace",
  "version": "1.0.0",
  "description": "CUTLAB AI Professional Video Editing Workspace",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.396",
    "@remotion/player": "^4.0.396",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.396"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cutlab.workspace",
    "productName": "CUTLAB Workspace",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ]
  }
}
